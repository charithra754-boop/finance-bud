# FinPilot VP-MAS Environment Configuration
# Copy this file to .env and update values as needed

# ============================================================================
# API Server Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="FinPilot VP-MAS API"
API_VERSION=1.0.0
RELOAD=true
LOG_LEVEL=info

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================================================
# Agent Configuration
# ============================================================================
USE_MOCK_ORCHESTRATION=true
USE_MOCK_PLANNING=true
USE_MOCK_RETRIEVAL=true
USE_REAL_VERIFICATION=true
CONVERSATIONAL_AGENT_ENABLED=true

# ============================================================================
# External APIs (Optional)
# ============================================================================
# ALPHA_VANTAGE_API_KEY=your_api_key_here
# YAHOO_FINANCE_API_KEY=your-yahoo-finance-key
# IEX_CLOUD_API_KEY=your-iex-cloud-key
YAHOO_FINANCE_ENABLED=true

# ============================================================================
# Ollama Configuration (for Conversational Agent)
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30

# ============================================================================
# Database (Optional - for future use)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/finpilot
# SUPABASE_URL=your-project-url
# SUPABASE_KEY=your-anon-key
# SUPABASE_SERVICE_KEY=your-service-key

# ============================================================================
# Performance & Caching
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
MAX_REQUEST_TIMEOUT=120

# ============================================================================
# Security (Production)
# ============================================================================
ENABLE_API_KEY_AUTH=false
# API_KEY=your_secure_api_key_here
# JWT_SECRET=your-jwt-secret
# ENCRYPTION_KEY=your-encryption-key
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================================================
# Development & Debug
# ============================================================================
DEBUG_MODE=false
ENABLE_PROFILING=false